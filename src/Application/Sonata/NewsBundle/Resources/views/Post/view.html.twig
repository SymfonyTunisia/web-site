<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="span12"><i class="icon-file page-title-icon"></i>

                <h2>Actualités /</h2>

                <p>Titre de l'actualité</p>
            </div>
        </div>
    </div>
</div>
<div class="container news">
    <div class="row">
        <div class="span12">
            <article class="box-news">

                <header>
                    <div class="post-info">
                        <h5><i class="icon-calendar"></i> {{ post.publicationDateStart | format_date }} </h5>
                    </div>
                    <h3>{{ post.title }}</h3>

                    <div class="span5 image-detail"><img src="{{ asset(['images/', post.image]|join) }}"/></div>
                    <div class="tags">
                        {% if post.tags|length > 1 %}
                            <i class="icon-tags"></i>
                        {% else %}
                            <i class="icon-tag"></i>
                        {% endif %}

                        {{ 'published_under'|transchoice(post.tags|length, {}, 'SonataNewsBundle') }}
                        {% for tag in post.tags %}
                            <a href="{{ url('sonata_news_tag', { 'tag': tag.slug } ) }}">{{ tag.name }}</a>
                        {% endfor %}
                    </div>
                </header>
                <div class="news-content">
                    <h5> {{ post.title }}</h5>

                    <p>{{ post.content|raw }}</p>
                </div>
            </article>
        </div>
    </div>
</div>


